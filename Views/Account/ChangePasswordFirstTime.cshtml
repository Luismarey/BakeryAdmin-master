@model BakeryAdmin.Models.ViewModels.ContraseñaModels

@{
    ViewData["Title"] = "Cambiar Contraseña";
    Layout = null; // no usar layout principal
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Migas de Amor</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            background-color: #faf6f1;
            font-family: "Segoe UI", sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .login-container {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            background: #fffaf2;
            border: 2px solid #e6d3c1;
            border-radius: 16px;
            padding: 2.5rem;
            box-shadow: 0 4px 10px rgba(0,0,0,0.08);
            width: 100%;
            max-width: 500px;
        }

            .login-card h2 {
                font-family: "Georgia", serif;
                color: #6a3e1f;
                text-align: center;
                margin-bottom: 1rem;
            }

        .form-floating label {
            color: #6a3e1f;
        }

        .btn-primary-custom {
            background-color: #8b4a24;
            border-color: #8b4a24;
            color: white;
        }

            .btn-primary-custom:hover {
                background-color: #6a3e1f;
                border-color: #6a3e1f;
            }

        footer {
            text-align: center;
            color: #8b4a24;
            font-size: 0.9rem;
            padding: 1rem;
            border-top: 1px solid #e6d3c1;
        }

        .logo {
            display: block;
            margin: 0 auto 1rem;
            height: 90px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <img src="/img/logo-horizontal.png" alt="Migas de Amor" class="logo" />

            <h2><i class="fa-solid fa-key me-2"></i> Cambiar Contraseña</h2>
            <p class="text-center mb-4">Debes actualizar tu contraseña antes de continuar</p>

            <form asp-action="ChangePasswordFirstTime" method="post" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserId" />

                <div class="form-floating mb-3">
                    <input asp-for="NewPassword" class="form-control" type="password" placeholder="Nueva contraseña" />
                    <label asp-for="NewPassword"><i class="fa fa-lock"></i> Nueva contraseña</label>
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Confirmar" class="form-control" type="password" placeholder="Confirmar contraseña" />
                    <label asp-for="Confirmar"><i class="fa fa-lock"></i> Confirmar contraseña</label>
                    <span asp-validation-for="Confirmar" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary-custom w-100 mb-3">
                    <i class="fa fa-save me-2"></i> Cambiar Contraseña
                </button>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mt-3 text-center">
                        Ocurrió un error, por favor revisa los datos
                    </div>
                }
            </form>

            <div class="text-center text-muted mt-3">
                &copy; 2025 Migas de Amor — Pan fresco hecho con amor ❤
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
