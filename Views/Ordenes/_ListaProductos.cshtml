@model IEnumerable<BakeryAdmin.Models.OrdenItem>

@{
    decimal totalDescuento = Model?.Sum(x => x.Descuento) ?? 0;
    decimal totalSubtotal = Model?.Sum(x => x.Subtotal) ?? 0;
    decimal total = totalSubtotal - totalDescuento;
}

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Descuento</th>
            <th>Subtotal</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@item.Producto?.Nombre</td>
                    <td>@item.Cantidad</td>
                    <td>@item.PrecioUnitario.ToString("0.00")</td>
                    <td>@item.Descuento.ToString("0.00")</td>
                    <td>@item.Subtotal.ToString("0.00")</td>
                    <td class="text-end">
                        <button class="btn btn-sm btn-outline-secondary btn-edit" data-id="@item.OrdenItemId" type="button">
                            <i class="fa fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger btn-delete" data-id="@item.OrdenItemId" type="button">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">No hay items registrados.</td>
            </tr>
        }
    </tbody>

    @if (Model != null && Model.Any())
    {
        <tfoot class="table-light fw-bold">
            <tr>
                <td colspan="4" class="text-end">Totales:</td>
                <td>@totalDescuento.ToString("0.00")</td>
                <td>@totalSubtotal.ToString("0.00")</td>
                <td colspan="2">@total.ToString("0.00")</td>
            </tr>
        </tfoot>
    }
</table>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            // EDITAR ITEM (abre modal)
            document.querySelectorAll(".btn-edit").forEach(btn => {
                btn.addEventListener("click", function () {
                    let id = this.getAttribute("data-id");

                    fetch(`/Ordenes/EditItem/${id}`)
                        .then(r => r.text())
                        .then(html => {
                            document.querySelector("#modalItem .modal-content").innerHTML = html;
                            var modal = new bootstrap.Modal(document.getElementById("modalItem"));
                            modal.show();
                        });
                });
            });

            // ELIMINAR ITEM
            document.querySelectorAll(".btn-delete").forEach(btn => {
                btn.addEventListener("click", function () {
                    let id = this.getAttribute("data-id");
                    let tr = this.closest("tr");

                    Swal.fire({
                        title: "¿Eliminar registro?",
                        text: "Esta acción no se puede deshacer.",
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonText: "Sí, eliminar",
                        cancelButtonText: "Cancelar"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            fetch(`/Ordenes/DeleteItemConfirmed/${id}`, { method: "POST" })
                                .then(r => r.json())
                                .then(res => {
                                    if (res.success) {
                                        tr.remove();
                                        Swal.fire("Eliminado", "El item fue eliminado.", "success");
                                    } else {
                                        Swal.fire("Error", res.message, "error");
                                    }
                                });
                        }
                    });
                });
            });
        });
    </script>
}