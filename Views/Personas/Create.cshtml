@model BakeryAdmin.Models.PersonaBase
@using Microsoft.AspNetCore.Mvc.Rendering
@using static BakeryAdmin.Models.Enums

@{
    ViewData["Title"] = "Nueva Persona";
}

<h2 class="mb-4">Nueva Persona</h2>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()

    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <div class="form-floating">
                <input asp-for="Nombres" class="form-control" maxlength="40" placeholder="Nombres" required />
                <label asp-for="Nombres">Nombre</label>
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating">
                <input asp-for="Apellidos" class="form-control" maxlength="40" placeholder="Apellidos" required />
                <label asp-for="Apellidos">Apellido</label>
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
        </div>
    </div>
    
    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <div class="form-floating">
                <select asp-for="TipoPersona" id="TipoSeleccionado" class="form-control" required 
                        onchange="mostrarCamposPorTipo()" asp-items="Html.GetEnumSelectList<TipoPersona>()"> 
                    <option value="">-- Seleccione Tipo --</option>
                </select>
                <label asp-for="TipoPersona">Tipo de Persona</label>
                <span asp-validation-for="TipoPersona" class="text-danger"></span>
            </div>
        </div>
        
        <!-- Aquí colocamos Fecha de Nacimiento (antes estaba más abajo). -->
        <div class="col-md-6">
            <div class="form-floating">
                <input asp-for="Fecha_Nacimiento" class="form-control" type="date" placeholder="Fecha_Nacimiento" id="FechaNacimientoField" />
                <label asp-for="Fecha_Nacimiento">Fecha de Nacimiento</label>
                <span asp-validation-for="Fecha_Nacimiento" class="text-danger"></span>
            </div>
        </div>
    </div>
    
    <!-- Campo CI ocultable: solo se mostrará cuando TipoPersona == Empleado -->
    <div id="ci-block" style="display:none;" class="row g-3 mb-3">
        <div class="col-md-6">
            <div class="form-floating">
                <input asp-for="NumCi" class="form-control" maxlength="15" placeholder="Carnet de Identidad" id="NumCiField" />
                <label asp-for="NumCi">C.I. (Opcional)</label>
                <span asp-validation-for="NumCi" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div id="campos-empleado" style="display:none;"> 
        <h5 class="mt-4">Datos Específicos del Empleado</h5>
        
        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Profesion" class="form-control" maxlength="40" placeholder="Profesión" />
                    <label asp-for="Profesion">Profesión</label>
                    <span asp-validation-for="Profesion" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Numero_Licencia" class="form-control" maxlength="15" placeholder="Número de Licencia" />
                    <label asp-for="Numero_Licencia">N° Licencia</label>
                    <span asp-validation-for="Numero_Licencia" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="row g-3 mb-3">
            <div class="col-md-4">
                <div class="form-floating">
                    <input asp-for="Categoria_Licencia" class="form-control" maxlength="2" placeholder="Categoría de Licencia" />
                    <label asp-for="Categoria_Licencia">Cat. Licencia</label>
                    <span asp-validation-for="Categoria_Licencia" class="text-danger"></span>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="form-floating">
                    <input asp-for="Turno" class="form-control" maxlength="10" placeholder="Turno" />
                    <label asp-for="Turno">Turno</label>
                    <span asp-validation-for="Turno" class="text-danger"></span>
                </div>
            </div>
            
            <div class="col-md-4 d-flex align-items-center">
                <div class="form-check">
                    <input type="hidden" name="Mobilidad" value="false" />
                    <input name="Mobilidad" id="Mobilidad" class="form-check-input" type="checkbox" value="true" />
                    <label class="form-check-label" for="Mobilidad">
                        Con Movilidad Propia
                    </label>
                </div>          
            </div>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <div class="form-floating">
                <input asp-for="Correo_Electronico" class="form-control" placeholder="Correo_Electronico" />
                <label asp-for="Correo_Electronico">Email</label>
                <span asp-validation-for="Correo_Electronico" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating">
                <input asp-for="NumCelular" class="form-control" maxlength="15" placeholder="NumCelular" required />
                <label asp-for="NumCelular">Móvil</label>
                <span asp-validation-for="NumCelular" class="text-danger"></span>
            </div>
        </div>
    </div>

    <h5 class="mt-4">Dirección</h5>
    <div class="row g-3 mb-3">
        <div class="col-12">
            <input type="hidden" asp-for="PersonaId" id="PersonaId" />
            <input type="hidden" id="numDirecciones" value="0" />
            <table class="table table-bordered table-striped" id="tablaDirecciones">
                <thead>
                    <tr>
                        <th>Zona</th>
                        <th>Calle</th>
                        <th>Número</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Fila final: aquí colocamos el botón Agregar Dirección a la misma altura donde estaba Fecha -->
    <div class="row g-3 mb-3">
        <div class="col-md-6 d-flex align-items-center">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#direccionesModal">Agregar Dirección</button>
        </div>
        <div class="col-md-6 d-flex align-items-end justify-content-end">
            <button class="btn btn-success btn-lg" type="submit">Guardar Persona</button>
        </div>
    </div>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Volver a la Lista</a>

<!-- Modal para Agregar Dirección -->
<div class="modal fade" id="direccionesModal" tabindex="-1" aria-labelledby="direccionesModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="direccionesModalLabel">Agregar Dirección</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>
      <div class="modal-body">
            <div class="mb-3">
                <label for="modalZona" class="form-label">Zona</label>
                <input id="modalZona" class="form-control" />
            </div>
            <div class="mb-3">
                <label for="modalCalle" class="form-label">Calle</label>
                <input id="modalCalle" class="form-control" />
            </div>
            <div class="mb-3">
                <label for="modalNumero" class="form-label">Número</label>
                <input id="modalNumero" class="form-control" />
            </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary" onclick="agregarDireccionDesdeModal()">Agregar</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.querySelectorAll('.needs-validation');
                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault();
                                event.stopPropagation();
                                form.classList.add('was-validated');
                                return;
                            }

                            Swal.fire({
                                title: '¿Deseas guardar este registro?',
                                icon: 'question',
                                showCancelButton: true,
                                confirmButtonText: 'Sí, guardar',
                                cancelButtonText: 'Cancelar',
                                reverseButtons: true
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    form.submit();
                                }
                            });
                        }, false);
                    });
            });
        })();

        function mostrarCamposPorTipo() {
            // Ajuste: usar valor numérico del enum. Reemplazar con el valor real de Empleado si cambia.
            const EMPLEADO_ID = "3";
            let tipoId = document.getElementById("TipoSeleccionado").value;
            let camposEmpleado = document.getElementById("campos-empleado");
            let ciBlock = document.getElementById("ci-block");

            if (tipoId === EMPLEADO_ID) {
                camposEmpleado.style.display = "block";
                ciBlock.style.display = "block";
            } else {
                camposEmpleado.style.display = "none";
                ciBlock.style.display = "none";
                // Limpiar CI si no es empleado
                let ci = document.getElementById("NumCiField");
                if (ci) ci.value = "";
            }
        }

        document.addEventListener('DOMContentLoaded', (event) => {
            mostrarCamposPorTipo();
            // Si hay direcciones guardadas cargar (si usa endpoint)
            // cargarDirecciones();
        });

        // --- Funciones para manejo cliente de direcciones ---
        function agregarDireccionDesdeModal() {
            const zona = document.getElementById('modalZona').value.trim();
            const calle = document.getElementById('modalCalle').value.trim();
            const numero = document.getElementById('modalNumero').value.trim();

            if (!zona && !calle && !numero) {
                Swal.fire('Aviso', 'Complete al menos un campo de la dirección.', 'warning');
                return;
            }

            let index = parseInt(document.getElementById('numDirecciones').value || "0", 10);

            // Crear fila visible
            const tbody = document.querySelector('#tablaDirecciones tbody');
            const tr = document.createElement('tr');

            tr.innerHTML = `
                <td>${escapeHtml(zona)}<input type="hidden" name="Direcciones[${index}].Zona" value="${escapeAttr(zona)}" /></td>
                <td>${escapeHtml(calle)}<input type="hidden" name="Direcciones[${index}].Calle" value="${escapeAttr(calle)}" /></td>
                <td>${escapeHtml(numero)}<input type="hidden" name="Direcciones[${index}].Numero" value="${escapeAttr(numero)}" /></td>
                <td><button type="button" class="btn btn-danger btn-sm" onclick="eliminarDireccionRow(this)">Eliminar</button></td>
            `;
            tbody.appendChild(tr);

            index++;
            document.getElementById('numDirecciones').value = index;

            // Limpiar modal y cerrar
            document.getElementById('modalZona').value = '';
            document.getElementById('modalCalle').value = '';
            document.getElementById('modalNumero').value = '';
            var modalEl = document.getElementById('direccionesModal');
            var modal = bootstrap.Modal.getInstance(modalEl) || new bootstrap.Modal(modalEl);
            modal.hide();
        }

        function eliminarDireccionRow(btn) {
            const tr = btn.closest('tr');
            if (!tr) return;
            tr.remove();
            // No reindexamos nombres ocultos para simplicidad; para binding perfecto habría que reindexar.
        }

        function escapeHtml(s) {
            if (!s) return '';
            return s.replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;');
        }
        function escapeAttr(s) {
            if (!s) return '';
            return s.replace(/"/g,'&quot;');
        }

        // Si mantiene endpoint de direcciones, conservar la función original
        function cargarDirecciones() {
            let personaId = $("#PersonaId").val();
            if (!personaId) return;
            $.get("/Direcciones/Listar", { personaId }, function (data) {
                let rows = "";
                data.forEach(d => {
                    rows += `<tr>
                                <td>${d.zona ?? ""}</td>
                                <td>${d.calle ?? ""}</td>
                                <td>${d.numero ?? ""}</td>
                                <td><button class="btn btn-danger btn-sm" onclick="eliminarDireccion(${d.direccionId})">Eliminar</button></td>
                            </tr>`;
                });
                $("#tablaDirecciones tbody").html(rows);
            });
        }
    </script>
}
