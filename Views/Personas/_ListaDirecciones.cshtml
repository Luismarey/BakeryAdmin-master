@model IEnumerable<BakeryAdmin.Models.Direccion>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Zona</th>
            <th>Calle</th>
            <th>Número</th>
            <th>Edificio</th>
            <th>Referencia</th>
            <th>Activo</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var direccion in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@direccion.Zona</td>
                    <td>@direccion.Calle</td>
                    <td>@direccion.Numero</td>
                    <td>@direccion.NombreEdificio</td>
                    <td>@direccion.Referencia</td>
                    <td>
                        @if (direccion.Activo)
                        {
                            <span class="badge bg-success">Sí</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </td>
                    <td class="text-end">
                        <button type="button" class="btn btn-sm btn-info btn-edit-direccion" data-id="@direccion.DireccionId">
                            <i class="fa fa-edit"></i> Editar
                        </button>
                        <button type="button" class="btn btn-sm btn-danger btn-delete-direccion" data-id="@direccion.DireccionId">
                            <i class="fa fa-trash"></i> Eliminar
                        </button>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center text-muted">No hay direcciones registradas.</td>
            </tr>
        }
    </tbody>
</table>
